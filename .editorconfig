# EditorConfig helps maintain consistent coding styles between different editors and IDEs
root = true

# Defaults
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Client (Vue/JS/CSS): 2 spaces
[client/**]
indent_style = space
indent_size = 2

# Server (Java): 4 spaces
[server/**]
indent_style = space
indent_size = 4

# Markdown: don't trim trailing spaces (they can be meaningful)
[*.md]
trim_trailing_whitespace = false
